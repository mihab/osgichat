<?xml version="1.0" encoding="utf-8"?>
<!---
Mobile error view to show a single error message
-->
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="Error" creationComplete="textArea.appendText(data.message);">
	<s:navigationContent>
		<s:Button label="Back" click="navigator.popView();"/>
	</s:navigationContent>
	<s:VGroup width="100%" height="100%">
		<s:TextArea id="textArea" editable="false" width="100%" height="100%" verticalAlign="middle"/>
	</s:VGroup>
</s:View>
